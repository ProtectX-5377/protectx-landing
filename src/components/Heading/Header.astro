<header class="w-full border-b border-gray-300 bg-white fixed top-0 left-0 z-50 shadow-sm">
  <div class="max-w-7xl mx-auto px-6 md:px-8 flex justify-between items-center h-16">

    <!-- Logo -->
    <div class="flex items-center gap-2">
      <div class="w-8 h-8 bg-blue-500 rounded-lg flex items-center justify-center text-white font-bold">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none"
          stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
          class="icon icon-tabler icon-tabler-shield">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
          <path d="M12 3a12 12 0 0 0 8.5 3a12 12 0 0 1 -8.5 15a12 12 0 0 1 -8.5 -15a12 12 0 0 0 8.5 -3" />
        </svg>
      </div>
      <h2 class="text-2xl font-extrabold tracking-tight text-blue-800">ProtectX</h2>
    </div>

    <!-- Menú de navegación (desktop) -->
    <nav class="hidden md:flex">
      <ul id="nav-menu" class="flex gap-8 text-base font-medium text-gray-600">
        <li><a href="#home">Inicio</a></li>
        <li><a href="#about">Beneficios</a></li>
        <li><a href="#recognition">Reconocimientos</a></li>
        <li><a href="#success">Casos de éxito</a></li>
        <li><a href="#team">Equipo</a></li>
        <li><a href="#contact">Contacto</a></li>
      </ul>
    </nav>

    <!-- Botón de idioma -->
    <button
      id="lang-toggle"
      class="ml-4 px-4 py-1 rounded-full border border-gray-300 bg-white text-gray-700 font-medium hover:bg-gray-100 transition"
    >
      ES
    </button>
  </div>

  <!-- Menú móvil -->
  <nav id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-200">
    <ul id="mobile-nav-menu" class="flex flex-col gap-4 px-6 py-4 text-gray-600 font-medium">
      <li><a href="#home">Inicio</a></li>
      <li><a href="#about">Beneficios</a></li>
      <li><a href="#recognition">Reconocimientos</a></li>
      <li><a href="#success">Casos de éxito</a></li>
      <li><a href="#team">Equipo</a></li>
      <li><a href="#contact">Contacto</a></li>
    </ul>
  </nav>

  <script is:client:load>
    let currentLang = "es";

    async function loadTranslations(lang) {
      const res = await fetch(`/i18n/${lang}.json`);
      const translations = await res.json();

      const keys = ["home", "about", "recognition", "success", "team", "contact"];
      const navItemsDesktop = document.querySelectorAll("#nav-menu li a");
      const navItemsMobile = document.querySelectorAll("#mobile-nav-menu li a");

      navItemsDesktop.forEach((el, i) => (el.textContent = translations.nav[keys[i]]));
      navItemsMobile.forEach((el, i) => (el.textContent = translations.nav[keys[i]]));
    }

    function toggleLang() {
      currentLang = currentLang === "es" ? "en" : "es";
      document.getElementById("lang-toggle").textContent = currentLang.toUpperCase();
      loadTranslations(currentLang);
    }

    document.getElementById("lang-toggle").addEventListener("click", toggleLang);

    // inicializar
    loadTranslations("es");
  </script>

</header>
