<header class="w-full border-b border-gray-300 bg-white fixed top-0 left-0 z-50 shadow-sm">
  <div class="max-w-7xl mx-auto px-6 md:px-8 flex justify-between items-center h-16">

    <!-- Logo -->
    <div class="flex items-center gap-2">
      <div class="w-8 h-8 bg-blue-500 rounded-lg flex items-center justify-center text-white font-bold">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none"
          stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
          class="icon icon-tabler icon-tabler-shield">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
          <path d="M12 3a12 12 0 0 0 8.5 3a12 12 0 0 1 -8.5 15a12 12 0 0 1 -8.5 -15a12 12 0 0 0 8.5 -3" />
        </svg>
      </div>
      <h2 class="text-2xl font-extrabold tracking-tight text-blue-800">ProtectX</h2>
    </div>

    <!-- Menú de navegación (desktop) -->
    <nav class="hidden md:flex">
      <ul class="flex gap-8 text-base font-medium text-gray-600">
        <li><a href="#home" class="hover:text-gray-900">Inicio</a></li>
        <li><a href="#about" class="hover:text-gray-900">Beneficios</a></li>
        <li><a href="#recognition" class="hover:text-gray-900">Reconocimientos</a></li>
        <li><a href="#success" class="hover:text-gray-900">Casos de éxito</a></li>
        <li><a href="#contact" class="hover:text-gray-900">Contacto</a></li>
      </ul>
    </nav>

    <!-- Botón de menú hamburguesa (mobile) -->
    <div class="md:hidden">
      <button id="mobile-menu-button" class="text-gray-600 hover:text-gray-900 focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2"
             viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
          <path d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

  </div>

  <!-- Menú móvil (hidden por defecto) -->
  <nav id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-200">
    <ul class="flex flex-col gap-4 px-6 py-4 text-gray-600 font-medium">
      <li><a href="#home" class="hover:text-gray-900">Inicio</a></li>
      <li><a href="#about" class="hover:text-gray-900">Beneficios</a></li>
      <li><a href="#success" class="hover:text-gray-900">Casos de éxito</a></li>
      <li><a href="#contact" class="hover:text-gray-900">Contacto</a></li>
    </ul>
  </nav>

  <script>
    const btn = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');
    btn.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  </script>
</header>